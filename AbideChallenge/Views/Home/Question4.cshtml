@model  AbideChallenge.Models.Question4ViewModel

<div>

    @using (Html.BeginForm("Question4Answer", "Home", FormMethod.Post))
    {
        <h3>Question 4</h3>

        <p>For each region of England (North East, South West, London, etc.):</p>
        <p>a. What was the average price per prescription of Flucloxacillin (excluding CoFluampicil)?</p>
        <p>b. How much did this vary from the national mean?</p>

        <div class="form-group row">
            <div class="col-md-12">
                <button class="btn btn-success">Go</button>
            </div>
        </div>

        <div class="form-group row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Region</th>
                        <th>Average Price</th>
                        <th>Variation</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => row.RegionDisplay)</td>
                            <td>@Html.DisplayFor(m => row.AveragePrice)</td>
                            <td>@Html.DisplayFor(m => row.Variation)%</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    }
</div>