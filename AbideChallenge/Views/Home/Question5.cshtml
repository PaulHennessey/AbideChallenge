@model  AbideChallenge.Models.Question5ViewModel

<div>

    @using (Html.BeginForm("Question5Answer", "Home", FormMethod.Post))
    {
        <h3>Question 5</h3>

        <p>Which five practices had the highest spend?</p>

        <div class="form-group row">
            <div class="col-md-12">
                <button class="btn btn-success">Go</button>
            </div>
        </div>

        <div class="form-group row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Practice Name</th>
                        <th>Town</th>
                        <th>Region</th>
                        <th>Spend</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => row.PracticeName)</td>
                            <td>@Html.DisplayFor(m => row.PracticeTown)</td>
                            <td>@Html.DisplayFor(m => row.RegionDisplay)</td>
                            <td>@Html.DisplayFor(m => row.Spend)%</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    }
</div>